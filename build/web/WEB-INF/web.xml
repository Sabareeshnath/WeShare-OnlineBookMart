<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RegisterNewUsers</servlet-name>
        <servlet-class>com.connect.security.RegisterNewUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticateLogin</servlet-name>
        <servlet-class>com.connect.security.AuthenticateLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DBConnection</servlet-name>
        <servlet-class>com.connect.security.DBConnection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterNewUsers</servlet-name>
        <url-pattern>/RegisterNewUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticateLogin</servlet-name>
        <url-pattern>/AuthenticateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DBConnection</servlet-name>
        <url-pattern>/DBConnection</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
